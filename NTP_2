#include <WiFi.h>

// Credencials de la xarxa
const char* ssid     = "AP_asix";
const char* password = "AP_asix2023";

void setup() {
  Serial.begin(115200);
  delay(1000);

  Serial.println("Iniciant connexió WiFi...");
  WiFi.begin(ssid, password);

  // Espera fins que es connecti
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("\nConnexió establerta!");
  Serial.print("IP assignada: ");
  Serial.println(WiFi.localIP());
}

void loop() {
  // Aquí pots posar el teu codi principal
  // Exemple: comprovar estat de la connexió
  if (WiFi.status() != WL_CONNECTED) {
    Serial.println("Connexió perduda, reconnectant...");
    WiFi.begin(ssid, password);
  }
  delay(2000);
}
