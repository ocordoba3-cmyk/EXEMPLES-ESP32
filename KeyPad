#include <Keypad.h>

const byte ROWS = 4;
const byte COLS = 4;
char keys[ROWS][COLS] = {
  { '1','2','3','A' },
  { '4','5','6','B' },
  { '7','8','9','C' },
  { '*','0','#','D' }
};

byte rowPins[ROWS] = {19, 18, 5, 17};
byte colPins[COLS] = {16, 4, 2, 15};

Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

String password = "1234";
String input = "";

void setup() {
  Serial.begin(9600);
  Serial.println("Introdueix la contrasenya:");
}

void loop() {
  char key = keypad.getKey();
  if (key) {
    Serial.print(key);
    if (key == '#') {
      if (input == password) {
        Serial.println("\nContrasenya correcta!");
      } else {
        Serial.println("\nContrasenya incorrecta.");
      }
      input = "";
    } else if (key == '*') {
      input = "";
      Serial.println("\nReset.");
    } else {
      input += key;
    }
  }
}
